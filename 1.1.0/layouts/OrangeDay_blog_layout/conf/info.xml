		<group>
			<title xml:lang="ko">메인 공통 - 새글</title>
	
			<var name="site_banner" type="text">
				<title xml:lang="ko">슬라이드 배너 게시판</title>
				<description xml:lang="ko">관리자만 볼 수 있는 전용 게시판 생성 후 srl 입력, 사용법 참고. </description>
			</var>
			<var name="site_banner_num" type="text">
				<title xml:lang="ko">슬라이드 배너 목록 수</title>
				<description xml:lang="ko">기본 3개</description>
			</var>	
			
			<var name="site_new_con" type="text">
				<title xml:lang="ko">최신 글 게시판</title>
				<description xml:lang="ko">게시판 srl 넘버입력,  ","로 여러개 입력 가능, 빈칸은 모든 게시판 적용</description>
			</var>
			<var name="site_new_con_num" type="radio">
				<title xml:lang="ko">최신 글 목록 수</title>
				<options value="12">
					<title xml:lang="ko">12</title>
				</options>
				<options value="18">
					<title xml:lang="ko">18</title>
				</options>
				<options value="24">
					<title xml:lang="ko">24</title>
				</options>
				<description xml:lang="ko">최신글 목록 수</description>
			</var>			
	
