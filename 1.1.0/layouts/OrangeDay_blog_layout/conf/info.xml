<?xml version="1.0" encoding="UTF-8"?>
<layout version="0.2">
    <title xml:lang="ko">OrangeDay 블로그 레이아웃</title>
    <description xml:lang="ko">블로그 형태의 커뮤니티용 레이아웃</description>
    <version>1.1.0</version>
    <date>2024</date>
    <author email_address="yabssabi@gmail.com" link="https://www.orangeday.com">
        <name xml:lang="ko">Yabi 夜飛</name>
    </author>
    <menus>
        <menu name="GNB" maxdepth="2" default="true">
            <title xml:lang="ko">주 메뉴</title>
        </menu>
		<menu name="LNB" maxdepth="1" default="true">
            <title xml:lang="ko">하단 서브 메뉴</title>
        </menu>
    </menus>
	<extra_vars>
		<group>
			<title xml:lang="ko">테마</title>
			<var name="site_sign_meta" type="radio">
				<title xml:lang="ko">서명 사용</title>
				<description xml:lang="ko">로그인 / 회원가입 보이기</description>
				<options value="yes">
					<title xml:lang="ko">사용</title>
				</options>
				<options value="no">
					<title xml:lang="ko">사용안함</title>
				</options>
			</var>			
			<var name="gnb_width" type="text" default="180">
				<title xml:lang="ko">메뉴-가로폭</title>
				<description xml:lang="ko">메뉴-가로폭를 정할수 있습니다.(디폴트 : 180px)</description>
			</var>
			
			<var name="no_mean1" type="checkbox">
				<title xml:lang="ko">GNB ||||||||||||||||||||||||||||</title>
				<description xml:lang="ko">------------------------------------------------------ 단락 구분을 위한 의미없는 옵션입니다.</description>
				<options value="a">
					<title xml:lang="ko"></title>
				</options>
			</var>			
			<var name="use_gnb" type="radio">
				<title xml:lang="ko">GNB 옵션 사용자 제어</title>
				<options value="yes">
					<title xml:lang="ko">사용</title>
				</options>
				<options value="no">
					<title xml:lang="ko">중지</title>
				</options>
			</var>			
			<var name="use_gnb_allways_open" type="radio">
				<title xml:lang="ko">GNB 항상 열기</title>
				<description xml:lang="ko">2차 이상 메뉴가 항상 활성화 됩니다.</description>
				<options value="yes">
					<title xml:lang="ko">사용</title>
				</options>
				<options value="no">
					<title xml:lang="ko">중지</title>
				</options>
			</var>
			<var name="use_gnb_max_height" type="radio">
				<title xml:lang="ko">GNB 높이 최대치</title>
				<description xml:lang="ko">GNB를 포함하는 왼쪽 창 전체가 스크롤 됩니다.</description>
				<options value="yes">
					<title xml:lang="ko">사용</title>
				</options>
				<options value="no">
					<title xml:lang="ko">중지</title>
				</options>
			</var>
			
			<var name="no_mean2" type="checkbox">
				<title xml:lang="ko">컬러테마 ||||||||||||||||||||||||||||</title>
				<description xml:lang="ko">------------------------------------------------------ 단락 구분을 위한 의미없는 옵션입니다.</description>
				<options value="a">
					<title xml:lang="ko"></title>
				</options>
			</var>			
			<var name="use_darkMode" type="radio">
				<title xml:lang="ko">다크모드 사용자 제어</title>
				<options value="yes">
					<title xml:lang="ko">사용</title>
				</options>
				<options value="no">
					<title xml:lang="ko">중지</title>
				</options>
			</var>
			<var name="use_darkMode_set" type="radio">
				<title xml:lang="ko">다크모드 고정</title>
				<description xml:lang="ko">다크모드 사용자 제어 중지시 모드를 설정할 수 있습니다.</description>
				<options value="dark">
					<title xml:lang="ko">다크</title>
				</options>
				<options value="light">
					<title xml:lang="ko">라이트</title>
				</options>
			</var>
			
			<var name="use_colorTheme" type="radio">
				<title xml:lang="ko">컬러테마 사용자 제어</title>
				<options value="yes">
					<title xml:lang="ko">사용</title>
				</options>
				<options value="no">
					<title xml:lang="ko">중지</title>
				</options>
			</var>
			<var name="use_colorTheme_set" type="radio">
				<title xml:lang="ko">컬러테마 고정</title>
				<description xml:lang="ko">컬러테마 사용자 제어 중지시 모드를 설정할 수 있습니다.</description>
				<options value="white">
					<title xml:lang="ko">화이트</title>
				</options>
				<options value="gray">
					<title xml:lang="ko">그레이</title>
				</options>
				<options value="orange">
					<title xml:lang="ko">오렌지</title>
				</options>
				<options value="blue">
					<title xml:lang="ko">블루</title>
				</options>
				<options value="green">
					<title xml:lang="ko">그린</title>
				</options>
				<options value="red">
					<title xml:lang="ko">레드</title>
				</options>
			</var>
			<var name="use_brightTheme_set" type="radio">
				<title xml:lang="ko">밝기 고정</title>
				<description xml:lang="ko">컬러테마 사용자 제어 중지시 모드를 설정할 수 있습니다.</description>
				<options value="d1">
					<title xml:lang="ko">저대비</title>
				</options>
				<options value="d2">
					<title xml:lang="ko">중대비</title>
				</options>
				<options value="d3">
					<title xml:lang="ko">고대비</title>
				</options>
			</var>
			
			<var name="no_mean3" type="checkbox">
				<title xml:lang="ko">외부옵션 ||||||||||||||||||||||||||||</title>
				<description xml:lang="ko">------------------------------------------------------ 단락 구분을 위한 의미없는 옵션입니다.</description>
				<options value="a">
					<title xml:lang="ko"></title>
				</options>
			</var>
			
			<var name="googleSearch" type="text">
				<title xml:lang="ko">구글 검색</title>
				<description xml:lang="ko">검색엔진ID 값 입력</description>
			</var>
			
			<var name="use_kakao_layout" type="text">
				<title xml:lang="ko">카카오톡 추가</title>
				<description xml:lang="ko">카카오 앱키(JavaScript) 값을 입력</description>
			</var>
			
			<var name="cafe24Traffic" type="text">
				<title xml:lang="ko">카페24 트래픽</title>
				<description xml:lang="ko">카페24제공 '도메인/throttle-me' 입력</description>
			</var>
			<var name="cafe24Disk" type="text">
				<title xml:lang="ko">카페24 하드</title>
				<description xml:lang="ko">카페24 서버 하드량(MB)</description>
			</var>
		</group>
		
		<group>
			<title xml:lang="ko">타이틀 영역</title>

			<var name="site_birthday" type="text">
				<title xml:lang="ko">사이트 시작일</title>
			</var>
			<var name="lgo_box_padding" type="text">
				<title xml:lang="ko">로고 박스 아래위 여백</title>
				<description xml:lang="ko">로고 2줄 사용시 줄 간격 (기본 0px)</description>
			</var>
			
			
			<var name="lgo_view_img" type="radio">
				<title xml:lang="ko">로고이미지 보기</title>
				<options value="yes">
					<title xml:lang="ko">보기</title>
				</options>
				<options value="no">
					<title xml:lang="ko">감추기</title>
				</options>
			</var>
			<var name="lgo_view_text" type="radio">
				<title xml:lang="ko">로고텍스트 보기</title>
				<options value="yes">
					<title xml:lang="ko">보기</title>
				</options>
				<options value="no">
					<title xml:lang="ko">감추기</title>
				</options>
			</var>			
