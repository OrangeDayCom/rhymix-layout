			<var name="lgo_font_size" type="text">
				<title xml:lang="ko">로고 폰트 사이즈</title>
				<description xml:lang="ko">기본 20px</description>
			</var>
			<var name="lgo_font_height" type="text">
				<title xml:lang="ko">로고 줄 행간</title>
				<description xml:lang="ko">로고 2줄 사용시 줄 간격 (기본 0px)</description>
			</var>
			
			<var name="logo_img" type="image">
				<title xml:lang="ko">로고 이미지</title>
				<description xml:lang="ko">로고 이미지가 사이트명 보다 우선으로 적용됩니다. (배경이 없는 png, svg 사용 추천) </description>
			</var>
			<var name="logo_img_width" type="text">
				<title xml:lang="ko">로고 이미지 크기(%)</title>
				<description xml:lang="ko">메뉴 폭 대비 로고 크기 비율(기본 : 80%)</description>
			</var>
			<var name="logo_img_round" type="text">
				<title xml:lang="ko">이미지 라운드(px)</title>
				<description xml:lang="ko">로고 이미지에 라운드를 줍니다. 기본 0px</description>
			</var>			
		
			<var name="site_title1" type="text">
				<title xml:lang="ko">사이트명 상</title>
			</var>
			<var name="site_title2" type="text">
				<title xml:lang="ko">사이트명 하</title>
				<description xml:lang="ko">사이트명이 길면 상하로 나누어서 입력할 수 있습니다.</description>
			</var>
			<var name="site_title3" type="textarea">
				<title xml:lang="ko">사이트명 설명</title>
				<description xml:lang="ko">로고 아래에 간단하게 설명글을 남길 수 있습니다.</description>
			</var>

						
		</group>
		
		<group>
			<title xml:lang="ko">푸터(왼쪽 사이드, 메인하단 공통)</title>
			<var name="site_company_name" type="text">
				<title xml:lang="ko">사이트명 or 회사이름</title>
			</var>
			<var name="site_address" type="text">
				<title xml:lang="ko">주소1</title>
			</var>
			<var name="site_address2" type="text">
				<title xml:lang="ko">주소2</title>
			</var>
			<var name="site_copyright" type="text">
				<title xml:lang="ko">카피라이트 주체</title>
				<description xml:lang="ko">위치 : (C) 'OOO' all rights reserved.</description>
			</var>
			<var name="site_badge" type="radio">
				<title xml:lang="ko">오렌지데이 뱃지</title>
				<description xml:lang="ko">사이트 하단의 오렌지데이 바로 가기 배너</description>
				<options value="yes">
					<title xml:lang="ko">사용</title>
				</options>
				<options value="no">
					<title xml:lang="ko">사용안함</title>
				</options>
			</var>					
		</group>		
		
		
		<group>
			<title xml:lang="ko">메인 (콘텐츠 영역)</title>
			
			<var name="use_index" type="radio">
				<title xml:lang="ko">메인사용</title>
				<options value="yes">
					<title xml:lang="ko">사용</title>
				</options>
				<options value="no">
					<title xml:lang="ko">사용안함</title>
				</options>
				<description xml:lang="ko">메인 사용 여부 설정</description>
			</var>
			<var name="index_style" type="radio">
				<title xml:lang="ko">메인 스타일</title>
				<options value="basic">
					<title xml:lang="ko">베이직</title>
				</options>
				<options value="classic">
					<title xml:lang="ko">클랙식</title>
				</options>
				<description xml:lang="ko">메인 페이지 스타일을 지정할 수 있습니다.</description>
			</var>
			
			<var name="layout_align" type="radio">
				<title xml:lang="ko">메인 정렬</title>
				<options value="full">
					<title xml:lang="ko">꽉찬화면</title>
				</options>
				<options value="left">
					<title xml:lang="ko">왼쪽 정렬</title>
				</options>
				<options value="center">
					<title xml:lang="ko">센터 정렬</title>
				</options>
				<description xml:lang="ko">메인 페이지 스타일을 지정할 수 있습니다.  왼쪽, 센터 정렬시 게시판에서 설정한 정렬 값은 무시됩니다.</description>
			</var>
			<var name="layout_width" type="text">
				<title xml:lang="ko">화면 사이즈</title>
				<description xml:lang="ko">왼쪽 GNB 영역을 포함한 사이즈입니다. 메인 정렬 값이 왼쪽 정렬일때 적용됩니다. 왼쪽, 센터 정렬시 게시판에서 설정한 사이즈 값은 무시됩니다.</description>
			</var>
			<var name="use_visitor" type="radio">
				<title xml:lang="ko">방문자 카운트</title>
				<options value="yes">
					<title xml:lang="ko">사용</title>
				</options>
				<options value="no">
					<title xml:lang="ko">사용안함</title>
				</options>
				<description xml:lang="ko">방문자 카운트 사용 여부 설정</description>
			</var>			
		</group>		
		
		
