		<group>
			<title xml:lang="ko">홈 메인 - 위젯 설정</title>
	
			<var name="site_banner" type="text">
				<title xml:lang="ko">📕 상단 슬라이드 배너</title>
				<description xml:lang="ko">관리자만 볼 수 있는 전용 게시판 생성 후 srl 입력, 사용법 참고. </description>
			</var>
			
			<var name="site_banner_num" type="text">
				<title xml:lang="ko">슬라이드 배너 목록 수</title>
				<description xml:lang="ko">기본 3개</description>
			</var>	
			<var name="site_new_con" type="text">
				<title xml:lang="ko">📕 최신 글</title>
				<description xml:lang="ko">게시판 srl 넘버입력,  ","로 여러개 입력 가능, 빈칸은 모든 게시판 적용, 🚨 최신글, 최신댓글, 최다조회, 최다추천, 랜덤에 모두 적용</description>
			</var>
			
			<var name="site_new_con_num" type="text">
				<title xml:lang="ko">목록 수 1</title>
				<description xml:lang="ko">최신 글 목로수, 기본 20개</description>
			</var>			
			<var name="site_notice_num" type="text">
				<title xml:lang="ko">목록 수 2</title>
				<description xml:lang="ko">기본 3개, 🚨 공지사항, 최다조회, 최다추천, 랜덤 공통 적용 </description>
			</var>			
			<var name="site_new_com_num" type="text">
				<title xml:lang="ko">최신 댓글 목록 수</title>
				<description xml:lang="ko">기본 20개</description>
			</var>			
			<var name="site_notice" type="text">
				<title xml:lang="ko">📕 공지사항 게시판</title>
				<description xml:lang="ko">공지 게시판 생성 후 srl 입력. </description>
			</var>
			<var name="site_notice_link" type="text">
				<title xml:lang="ko">공지사항 링크</title>
				<description xml:lang="ko">공지사항 바로가기 링크 (필수 X), 해당 페이지 주소 입력 (ex: /Notice)</description>
			</var>
			<var name="site_new_gall" type="text">
				<title xml:lang="ko">📕 갤러리</title>
				<description xml:lang="ko">게시판 srl 넘버입력, ","로 여러개 입력 가능, 사진만 올리는 게시판 추천 </description>
			</var>
			
			<var name="site_new_gall_num" type="text">
				<title xml:lang="ko">갤러리 목록 수</title>
				<description xml:lang="ko">기본 10개 </description>
			</var>			
		</group>
		
		

		<group>
			<title xml:lang="ko">테마</title>
	
			<var name="use_gnb" type="radio">
				<title xml:lang="ko">📕  GNB 사용자 제어</title>
				<options value="yes">
					<title xml:lang="ko">사용</title>
				</options>
				<options value="no">
					<title xml:lang="ko">중지</title>
				</options>
			</var>			
			<var name="use_gnb_allways_open" type="radio">
				<title xml:lang="ko">GNB 항상 열기</title>
				<description xml:lang="ko">2차 이상 메뉴가 항상 활성화 됩니다.</description>
				<options value="yes">
					<title xml:lang="ko">사용</title>
				</options>
				<options value="no">
					<title xml:lang="ko">중지</title>
				</options>
			</var>
			<var name="use_gnb_max_height" type="radio">
				<title xml:lang="ko">GNB 높이 최대치</title>
				<description xml:lang="ko">GNB를 포함하는 왼쪽 창 전체가 스크롤 됩니다.</description>
				<options value="yes">
					<title xml:lang="ko">사용</title>
				</options>
				<options value="no">
					<title xml:lang="ko">중지</title>
				</options>
			</var>
			

			<var name="use_darkMode" type="radio">
				<title xml:lang="ko">📕 다크모드 사용자 제어</title>
				<options value="yes">
					<title xml:lang="ko">사용</title>
				</options>
				<options value="no">
					<title xml:lang="ko">중지</title>
				</options>
			</var>
			<var name="use_darkMode_set" type="radio">
				<title xml:lang="ko">다크모드 고정</title>
				<description xml:lang="ko">다크모드 사용자 제어 중지시 모드를 설정할 수 있습니다.</description>
				<options value="dark">
					<title xml:lang="ko">다크</title>
				</options>
				<options value="light">
					<title xml:lang="ko">라이트</title>
				</options>
			</var>
			
			<var name="use_colorTheme" type="radio">
				<title xml:lang="ko">📕 컬러테마 사용자 제어</title>
				<options value="yes">
					<title xml:lang="ko">사용</title>
				</options>
				<options value="no">
					<title xml:lang="ko">중지</title>
				</options>
			</var>
			<var name="use_colorTheme_set" type="radio">
				<title xml:lang="ko">컬러테마 고정</title>
				<description xml:lang="ko">컬러테마 사용자 제어 중지시 모드를 설정할 수 있습니다.</description>
				<options value="white">
					<title xml:lang="ko">화이트</title>
				</options>
				<options value="gray">
					<title xml:lang="ko">그레이</title>
				</options>
				<options value="orange">
					<title xml:lang="ko">오렌지</title>
				</options>
				<options value="blue">
					<title xml:lang="ko">블루</title>
				</options>
				<options value="green">
					<title xml:lang="ko">그린</title>
				</options>
				<options value="red">
					<title xml:lang="ko">레드</title>
				</options>
			</var>
			<var name="use_brightTheme_set" type="radio">
				<title xml:lang="ko">밝기 고정</title>
				<description xml:lang="ko">컬러테마 사용자 제어 중지시 모드를 설정할 수 있습니다.</description>
				<options value="d1">
					<title xml:lang="ko">저대비</title>
				</options>
				<options value="d2">
					<title xml:lang="ko">중대비</title>
				</options>
				<options value="d3">
					<title xml:lang="ko">고대비</title>
				</options>
			</var>

		</group>
		
		<group>
			<title xml:lang="ko">기타</title>
			<var name="site_sign_meta" type="radio">
				<title xml:lang="ko">회원가입 사용</title>
				<description xml:lang="ko">로그인 / 회원가입 보이기</description>
				<options value="yes">
					<title xml:lang="ko">사용</title>
				</options>
				<options value="no">
					<title xml:lang="ko">사용안함</title>
				</options>
			</var>				
			<var name="site_badge" type="radio">
				<title xml:lang="ko">오렌지데이 뱃지</title>
				<description xml:lang="ko">사이트 하단의 오렌지데이 바로 가기 배너</description>
				<options value="yes">
					<title xml:lang="ko">사용</title>
				</options>
				<options value="no">
					<title xml:lang="ko">사용안함</title>
				</options>
			</var>
			<var name="use_visitor" type="radio">
				<title xml:lang="ko">방문자 카운트</title>
				<options value="yes">
					<title xml:lang="ko">사용</title>
				</options>
				<options value="no">
					<title xml:lang="ko">사용안함</title>
				</options>
				<description xml:lang="ko">방문자 카운트 사용 여부 설정</description>
			</var>	
			<var name="googleSearch" type="text">
				<title xml:lang="ko">구글 검색</title>
				<description xml:lang="ko">검색엔진ID 값 입력 (입력 값 없으면 적용 안됨)</description>
			</var>
			<var name="googleAnalytics" type="text">
				<title xml:lang="ko">구글 애널리틱스</title>
				<description xml:lang="ko">측정 ID 값 입력 (입력 값 없으면 적용 안됨)</description>
			</var>			
			<var name="use_kakao_layout" type="text">
				<title xml:lang="ko">카카오톡 추가</title>
				<description xml:lang="ko">카카오 앱키(JavaScript) 값을 입력 (입력 값 없으면 적용 안됨, 오렌지데이 게시판사용 시 각각의 게시판에 카카오톡 앱키를 입력하지 않아도 전체에 적용, 게시판에서 설정한 값보다 우선 적용 됨)</description>
			</var>
			
			<var name="cafe24Traffic" type="text">
				<title xml:lang="ko">카페24 트래픽</title>
				<description xml:lang="ko">카페24제공 '도메인/throttle-me' 입력 (입력 값 없으면 적용 안됨)</description>
			</var>
			<var name="cafe24Disk" type="text">
				<title xml:lang="ko">카페24 하드</title>
				<description xml:lang="ko">카페24 서버 하드량(MB) (입력 값 없으면 적용 안됨)</description>
			</var>
		</group>
		
	</extra_vars>
</layout>
