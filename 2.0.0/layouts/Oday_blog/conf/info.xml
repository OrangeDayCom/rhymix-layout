<?xml version="1.0" encoding="UTF-8"?>
<layout version="0.2">
    <title xml:lang="ko">OrangeDay 블로그</title>
    <description xml:lang="ko">블로그 형태의 커뮤니티용 레이아웃</description>
    <version>2.0</version>
    <date>2024</date>
    <author email_address="yabssabi@gmail.com" link="https://www.orangeday.com">
        <name xml:lang="ko">Yabi 夜飛</name>
    </author>
    <menus>
        <menu name="GNB" maxdepth="2" default="true">
            <title xml:lang="ko">주 메뉴</title>
        </menu>
		<menu name="LNB" maxdepth="1" default="true">
            <title xml:lang="ko">하단 서브 메뉴</title>
        </menu>
    </menus>
	<extra_vars>

		
		<group>
			<title xml:lang="ko">기본 - 타이틀</title>

			<var name="gnb_width" type="text" default="180">
				<title xml:lang="ko">메뉴-가로폭</title>
				<description xml:lang="ko">메뉴-가로폭를 정할수 있습니다.(디폴트 : 180px)</description>
			</var>
			
			<var name="site_birthday" type="text">
				<title xml:lang="ko">사이트 시작일</title>
			</var>
			<var name="lgo_box_padding" type="text">
				<title xml:lang="ko">사이트명 아래위 여백</title>
				<description xml:lang="ko">로고 박스 아래위 여백</description>
			</var>
			
			<var name="lgo_view_img" type="radio">
				<title xml:lang="ko">📕 사이트 로고 보기</title>
				<description xml:lang="ko">사이트 명과 사이트 로고 보기를 각각 설정할 수 있습니다.</description>
				<options value="yes">
					<title xml:lang="ko">보기</title>
				</options>
				<options value="no">
					<title xml:lang="ko">감추기</title>
				</options>
			</var>			
			<var name="logo_img" type="image">
				<title xml:lang="ko">사이트 로고 이미지</title>
				<description xml:lang="ko">로고 이미지가 사이트명 보다 우선으로 적용됩니다. (배경이 없는 png, svg 사용 추천) </description>
			</var>
			<var name="logo_img_width" type="text">
				<title xml:lang="ko">사이트 로고 이미지 크기(%)</title>
				<description xml:lang="ko">메뉴 폭 대비 로고 크기 비율(기본 : 80%)</description>
			</var>
			<var name="logo_img_round" type="text">
				<title xml:lang="ko">사이트 로고 라운드(px)</title>
				<description xml:lang="ko">로고 이미지에 라운드를 줍니다. 기본 0px</description>
			</var>	
			
			<var name="lgo_view_text" type="radio">
				<title xml:lang="ko">📕 사이트 명 보기</title>
				<description xml:lang="ko">사이트 명과 사이트 로고 보기를 각각 설정할 수 있습니다.</description>
				<options value="yes">
					<title xml:lang="ko">보기</title>
				</options>
				<options value="no">
					<title xml:lang="ko">감추기</title>
				</options>
			</var>			

			<var name="site_title1" type="text">
				<title xml:lang="ko">사이트 명 상</title>
				<description xml:lang="ko">🚨 사이트 명은 반드시 입력해 주세요.</description>
			</var>
			<var name="site_title2" type="text">
				<title xml:lang="ko">사이트 명 하</title>
				<description xml:lang="ko">사이트명이 길면 상하로 나누어서 입력할 수 있습니다.</description>
			</var>

			<var name="lgo_font_size" type="text">
				<title xml:lang="ko">사이트 명 폰트 사이즈</title>
				<description xml:lang="ko">기본 20px</description>
			</var>
			<var name="lgo_font_height" type="text">
				<title xml:lang="ko">사이트 명 행간</title>
				<description xml:lang="ko">사이트 명 2줄 사용시 줄 간격 (기본 0px)</description>
			</var>
			
	
			<var name="site_title3" type="textarea">
				<title xml:lang="ko">사이트 명 설명</title>
				<description xml:lang="ko">로고 아래에 간단하게 설명글을 남길 수 있습니다.</description>
			</var>

						
		</group>
		
		
		<group>
			<title xml:lang="ko">기본 - 푸터</title>
			<var name="site_company_name" type="text">
				<title xml:lang="ko">사이트명 or 회사이름</title>
			</var>
			<var name="site_address" type="text">
				<title xml:lang="ko">주소1</title>
			</var>
			<var name="site_address2" type="text">
				<title xml:lang="ko">주소2</title>
			</var>
			<var name="site_copyright" type="text">
				<title xml:lang="ko">카피라이트 주체</title>
				<description xml:lang="ko">위치 : (C) 'OOO' all rights reserved.</description>
			</var>
			
		</group>	
	
		
		
